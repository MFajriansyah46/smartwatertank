<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/meat"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bread"
            android:title="Settings"
            android:titleTextColor="@color/white" />

        <!-- Profile Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_box"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile Icon"
                android:layout_marginEnd="16dp"
                android:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bang Raja"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:inputType="textPersonName"
                    android:padding="0dp" />

                <TextView
                    android:id="@+id/emailView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bangraja@gmail.com"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/editNameIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:tint="@android:color/white"
                android:contentDescription="Edit Name" />
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/bread"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Otomatis Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <Switch
                android:id="@+id/bukaKeranOtomatis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buka keran otomatis"
                android:textColor="@android:color/white"
                android:thumbTint="@android:color/white"
                android:trackTint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>