<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/meat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ITEM NOTIFIKASI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/rounded_box"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:elevation="2dp">

            <!-- Icon di kiri -->
            <ImageView
                android:id="@+id/ic_icon_notification"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_notification_icon"
                 android:contentDescription="@string/notification_icon" />

            <!-- Konten Notifikasi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Email -->
                <TextView
                    android:id="@+id/id_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white" />

                <!-- Deskripsi -->
                <TextView
                    android:id="@+id/id_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan notifikasi di sini Keterangan notifikasi di sini Keterangan notifikasi di sini Keterangan notifikasi di sini"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginTop="2dp" />

                <!-- Waktu dan Tanggal -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/id_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:30"
                        android:textSize="12sp"
                        android:textColor="#E0E0E0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â€¢ "
                        android:textSize="12sp"
                        android:textColor="#E0E0E0" />

                    <TextView
                        android:id="@+id/id_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-04-07"
                        android:textSize="12sp"
                        android:textColor="#E0E0E0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
