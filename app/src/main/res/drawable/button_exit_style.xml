<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- No fill (transparent) -->
            <corners android:radius="8dp" /> <!-- Optional: Rounded corners -->
            <padding
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp" /> <!-- Optional: Padding to adjust content spacing -->
        </shape>
    </item>
</selector>